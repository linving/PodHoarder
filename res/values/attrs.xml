<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CheckableImageButton">
        <attr name="defaultColor" format="integer" />
        <attr name="accentColor" format="integer" />
    </declare-styleable>

    <declare-styleable name="ToggleImageButton">
        <attr name="checkedDrawable" format="integer" />
        <attr name="unCheckedDrawable" format="integer" />
        <attr name="toggled" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="ButteryProgressBar">
        <attr name="barColor" format="reference|color" />
        <attr name="barHeight" format="dimension" />
        <attr name="detentWidth" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="TintableImageView">
        <attr name="tint" format="reference|color" />
    </declare-styleable>
</resources>