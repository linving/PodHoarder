<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Podhoarder" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:colorBackground">@color/app_background</item>
        <item name="android:actionModeBackground">@color/app_menu</item>
        <item name="android:spinnerItemStyle">@style/Podhoarder.ActionBar.SpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/Podhoarder.ActionBar.DropdownItemStyle</item>
        <item name="android:actionDropDownStyle">@style/Podhoarder.ActionBar.DropDownStyle</item>
        <item name="android:actionBarStyle">@style/Podhoarder.ActionBar</item>
    	<item name="android:actionBarWidgetTheme">@style/Podhoarder.ActionBarWidget</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_close</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionBar.OverflowButtonStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_row_background</item>
		<item name="android:selectableItemBackground">@drawable/bar_selector</item>
		<item name="android:actionBarItemBackground">@drawable/bar_selector</item> 
		<item name="android:actionMenuTextColor">@color/actionbar_title</item>
		<item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
		<item name="android:scrollbarThumbVertical">@drawable/scroll_thumb</item>
    </style>
    
    <style name="Podhoarder.ActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/app_menu</item>
        <item name="android:height">56dp</item>
       	<item name="android:displayOptions">showTitle</item>
       	<item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/Podhoarder.Text.Header.Inverse</item>
    </style>
    
    <style name="Podhoarder.ActionBarWidget" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- SearchView customization-->
        <item name="searchViewSearchIcon">@drawable/ic_action_search</item>
        <item name="searchViewCloseIcon">@drawable/ic_action_remove</item>
        <item name="searchViewTextField">@drawable/abc_textfield_search_default_holo_dark</item>
        <item name="searchViewAutoCompleteTextView">@style/AutoCompleteTextView</item>
    </style>
 
    <style name="AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/actionbar_title</item>
        <item name="android:textStyle">@style/Podhoarder.Text.Primary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHighlight">@color/app_detail</item>
    </style>
    
    <style name="Podhoarder.ActionBar.DropDownStyle" parent="@android:style/Widget.Holo.Light.Spinner">
	    <item name="android:background">@android:color/transparent</item>
	</style>
    
    <style name="Podhoarder.ActionBar.DropdownItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
	    <item name="android:textAppearance">@style/Podhoarder.Text.Primary</item>
	    <item name="android:popupBackground">#FFFFFF</item>
	    <item name="android:background">#FFFFFF</item>
	</style>
	
    <style name="Podhoarder.ActionBar.SpinnerItemStyle" parent="@android:style/Widget.Holo.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/Podhoarder.Text.Header.Inverse</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/spinner_mtrl_am_alpha</item>
    </style>
    
    <style name="Podhoarder.Text.Giant" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/text_inverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_giant</item>
        <item name="android:fontFamily">regular</item>
        <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">0.0</item>
	    <item name="android:shadowDy">0.0</item>
	    <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="Podhoarder.Text.Header" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:fontFamily">regular</item>
    </style>
    
    <style name="Podhoarder.Text.Primary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:fontFamily">regular</item>
    </style>
    
    <style name="Podhoarder.Text.Secondary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:fontFamily">regular</item>
    </style>
    
    <style name="Podhoarder.Text.Header.Inverse" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/text_inverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:fontFamily">regular</item>
    </style>
    
    <style name="Podhoarder.Text.Inverse" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_inverse</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:fontFamily">regular</item>
    </style>

    <style name="Podhoarder.Text.gridNotification" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_inverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_grid_notification</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="Podhoarder.Text.textNotification" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_notification</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>
    
    <style name="ActionBar.OverflowButtonStyle" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

</resources>