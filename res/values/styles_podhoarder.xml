<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Podhoarder" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Properties not using the android: namespace-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/Theme.Podhoarder.Toolbar.DrawerArrowStyle</item>
        <item name="searchViewStyle">@style/Theme.Podhoarder.Toolbar.SearchView</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_white_24dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- Properties using the android: namespace-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_close_white_24dp</item>
		<item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
		<item name="android:scrollbarThumbVertical">@drawable/scroll_thumb</item>
        <item name="android:windowActionModeOverlay">true</item>

    </style>

    <style name="Theme.Podhoarder.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Theme.Podhoarder.Toolbar.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Podhoarder.Text.gridNotification" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_grid_notification</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>
    
    <style name="Podhoarder.Seekbar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@drawable/player_seekbar</item>
		<item name="android:thumb">@drawable/player_seekbar_thumb</item>
		<item name="android:thumbOffset">0dp</item>
		<item name="android:padding">0dp</item>
		<item name="android:minHeight">8dip</item>
		<item name="android:maxHeight">8dip</item>
		<item name="android:focusable">true</item>
    </style>

    <style name="Theme.Podhoarder.Toolbar.SearchView" parent="Widget.AppCompat.SearchView">
        <!-- Close button icon -->
        <item name="closeIcon">@drawable/ic_close_white_24dp</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/ic_search_white_24dp</item>
    </style>

</resources>