<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.podhoarderproject.podhoarder"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/episode_title_container"
        android:layout_width="wrap_content"
        android:layout_height="0dp" 
        android:layout_weight="3">

        <ImageView
            android:id="@+id/episode_banner"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"/>

        <com.podhoarder.view.FloatingToggleButton
            android:id="@+id/episode_favorite_toggle"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-36dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:background="@android:color/transparent"
	        app:onDrawable="@drawable/ic_action_favorite_filled"
	        app:offDrawable="@drawable/ic_action_favorite_outline"
            app:color="@color/app_favorite" 
            app:shadowRadius="3.0"
            app:shadowDx="0.5"
            app:shadowDy="1.0"/>

        <com.podhoarder.view.StrokedTextView
            android:id="@+id/episode_title"
            style="@style/Podhoarder.Text.Giant"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginBottom="8dp"
            android:paddingRight="8dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            app:strokeWidth="1.0"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/episode_text_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="44dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="top|left"
            android:minHeight="72dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/episode_description_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="top"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_info" />

            <TextView
                android:id="@+id/episode_description"
                style="@style/Podhoarder.Text.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:maxLines="12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:gravity="top|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/episode_timeStamp_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clock" />

            <TextView
                android:id="@+id/episode_timeStamp"
                style="@style/Podhoarder.Text.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>