<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/episode_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/fab"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_alignParentRight="true"
            android:layout_below="@id/episode_banner"
            android:layout_marginRight="16dp"
            android:layout_marginTop="-28dp"
            android:background="@drawable/fab_ripple"
            android:elevation="4dp"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
            android:stateListAnimator="@anim/fab_anim" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/player_panel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/player_controls_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-28dp"
            android:orientation="vertical"
            android:visibility="visible">

            <SeekBar
                android:id="@+id/player_controls_seekbar"
                style="@style/Podhoarder.Seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="3dp" />

            <TextView
                android:id="@+id/nowplaying_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingTop="28dp"
                android:maxLines="1"
                style="@style/Base.TextAppearance.AppCompat.Headline"/>

            <TextView
                android:id="@+id/nowplaying_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                style="@style/Base.TextAppearance.AppCompat.Subhead"/>

            <include
                android:id="@+id/player_controls"
                layout="@layout/player_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/player_controls_seekbar"
                android:visibility="gone"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_queue_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-28dp"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/playlist_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Queue"
                android:textAllCaps="true" />

            <ListView
                android:id="@+id/playlist"
                listSelector="@drawable/list_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:clipToPadding="false"
                android:divider="@null"
                android:dividerHeight="0px"
                android:listSelector="@drawable/list_selector"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>