<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal"
    android:paddingBottom="5dp">
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginRight="25dp">
		    <TextView
		        android:id="@+id/player_list_row_episodeName"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:textColor="@color/fragment_player_playerlist_row_title"
		        android:textSize="@dimen/fragment_player_playerlist_row_title"
		        android:maxLines="2"
    			android:ellipsize="end"/>
		    <TextView
		        android:id="@+id/player_list_row_listened"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:textColor="@color/fragment_player_playerlist_row_listened"
		        android:textSize="@dimen/fragment_player_playerlist_row_listened"/>
	    </LinearLayout>
	    <ImageView
	        android:id="@+id/player_list_row_grabber"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_alignParentRight="true"
			android:src="@drawable/icmpmove"/>
</RelativeLayout>
