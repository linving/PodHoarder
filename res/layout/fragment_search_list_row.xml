<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_list_row_container"
    android:layout_width="match_parent"
    android:layout_height="75dp" 
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">
    <ImageView 
        android:id="@+id/search_list_feed_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:maxWidth="75dp"
        android:maxHeight="75dp"
        android:minHeight="75dp"
        android:minWidth="75dp"
        android:layout_centerVertical="true"
		android:src="@drawable/list_image"
		android:background="@null"
        android:alpha=".85"/>
    <LinearLayout 
        android:id="@+id/search_list_feed_text_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/search_list_feed_image"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true">
	    <TextView
	        android:id="@+id/search_list_feed_title"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:textColor="@color/search_list_feed_title"
	        android:textSize="@dimen/search_list_feed_title"
	        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
	        android:maxLines="1"
   			android:ellipsize="end"/>
	    <TextView 	
		    android:id="@+id/search_list_feed_author"
		    android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	    android:fontFamily="sans-serif-light"
	        android:textColor="@color/search_list_feed_author"
	        android:textSize="@dimen/search_list_feed_author"
	        android:maxLines="1"
   			android:ellipsize="end"/>
	    <TextView
	        android:id="@+id/search_list_feed_last_updated"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
        android:fontFamily="sans-serif-light"
	        android:maxLines="1"
	        android:textColor="@color/search_list_feed_last_updated"
	        android:textSize="@dimen/search_list_feed_last_updated"/>
    </LinearLayout>
</RelativeLayout>