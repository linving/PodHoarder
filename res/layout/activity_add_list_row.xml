<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_list_row_container"
    android:layout_width="match_parent"
    android:layout_height="75dp" 
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
	android:background="?android:attr/activatedBackgroundIndicator">
    <ImageView 
        android:id="@+id/search_list_feed_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:maxWidth="75dp"
        android:maxHeight="75dp"
        android:minHeight="75dp"
        android:minWidth="75dp"
        android:layout_alignParentTop="true"
		android:src="@drawable/list_image"
		android:background="@drawable/list_image"
        android:alpha=".85"/>
    <LinearLayout 
        android:id="@+id/search_list_feed_text_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/search_list_feed_image"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical">
	    <TextView
	        android:id="@+id/search_list_feed_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    style="@style/Podhoarder.Text.Primary"
	        android:maxLines="1"
   			android:ellipsize="end"/>
	    <TextView 	
		    android:id="@+id/search_list_feed_author"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    style="@style/Podhoarder.Text.Primary"
	        android:maxLines="1"
   			android:ellipsize="end"/>
	    <TextView
	        android:id="@+id/search_list_feed_last_updated"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxLines="1"
		    style="@style/Podhoarder.Text.Secondary"/>
    </LinearLayout>
    <TextView android:id="@+id/search_list_feed_description"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/search_list_feed_image"
	        android:maxLines="4"
   			android:ellipsize="end"
		    style="@style/Podhoarder.Text.Secondary"/>
</RelativeLayout>