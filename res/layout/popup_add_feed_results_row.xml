<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:descendantFocusability="blocksDescendants">
    <ImageView android:id="@+id/popup_add_feed_row_image"
        android:layout_width="75dip"
        android:layout_height="75dip"/>
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:layout_marginLeft="5dp"
    	android:orientation="vertical">
        <TextView
	        android:id="@+id/popup_add_feed_searchresults_list_row_title"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:textColor="@color/popup_add_feed_searchresults_list_row_title"
	        android:textSize="@dimen/popup_add_feed_searchresults_list_row_title"
	        android:maxLength="55"
	        android:singleLine="true"
   			android:ellipsize="end"/>
	    <TextView
	        android:id="@+id/popup_add_feed_searchresults_list_row_description"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_below="@id/popup_add_feed_searchresults_list_row_title"
	        android:textColor="@color/popup_add_feed_searchresults_list_row_description"
	        android:textSize="@dimen/popup_add_feed_searchresults_list_row_description"/>
    </RelativeLayout>
</LinearLayout>