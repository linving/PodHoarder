<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_episode_row_feed_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/list_episode_row_checkbox"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:clickable="false"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/list_episode_row_text_container"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="16dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/list_episode_row_episodeName"
                style="@style/Podhoarder.Text.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/list_episode_row_episodeAge"
                style="@style/Podhoarder.Text.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"  />

            
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/list_episode_row_expandable_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-50dip"
        android:layout_marginLeft="88dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/list_episode_row_expandableTextView"
            style="@style/Podhoarder.Text.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip" />
        
        <ImageView
                android:id="@+id/list_episode_row_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_accept"
                android:visibility="gone" />
    </LinearLayout>

</LinearLayout>