<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/list_item_background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/list_episode_row_feed_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/list_icon_outline_default"
        android:alpha=".26"
        android:src="@drawable/ic_cloud_white_24dp"
        android:scaleType="centerInside"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/list_episode_row_text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="72dp"
        android:paddingLeft="72dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/list_episode_row_episodeName"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="#134: Daniel Radcliffe, Laura Dern"
            android:maxLines="1"
            android:paddingRight="50dp" />

        <TextView
            android:id="@+id/list_episode_row_episodeAge"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:text="yesterday"
            android:maxLines="1" />
    </LinearLayout>


    <CheckBox
        android:id="@+id/list_episode_row_checkbox"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="16dp"
        android:clickable="false"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/list_episode_row_info"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha=".54"
        android:layout_marginRight="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_more_vert_grey600_24dp"
        android:visibility="visible" />

</RelativeLayout>