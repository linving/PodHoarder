<?xml version="1.0" encoding="utf-8"?>
<com.podhoarder.component.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.podhoarderproject.podhoarder"
    android:id="@+id/feeds_grid_item_checkableLayout"
    android:layout_width="@dimen/fragment_feeds_grid_item"
    android:layout_height="@dimen/fragment_feeds_grid_item"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:clickable="true"
    android:longClickable="true"
    android:orientation="vertical" >

    <com.podhoarder.component.TintableImageView
        android:id="@+id/feeds_grid_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/feeds_grid_image"
        android:scaleType="fitXY"
        app:tint="@drawable/grid_selector" />

    <ImageView
        android:id="@+id/feeds_grid_item_checkmark"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_accept"
        android:background="@color/app_detail"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/feeds_grid_item_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="#80000000"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/text_inverse" />

    <TextView
        android:id="@+id/feeds_grid_item_notification"
        style="@style/Podhoarder.Text.gridNotification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="@drawable/feeds_grid_notification_shape"
        android:maxLines="1" />

</com.podhoarder.component.CheckableRelativeLayout>