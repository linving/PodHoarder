<?xml version="1.0" encoding="utf-8"?>
<com.podhoarder.component.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feeds_grid_item_checkableLayout"
    android:layout_width="@dimen/fragment_feeds_grid_item"
    android:layout_height="@dimen/fragment_feeds_grid_item"
    android:orientation="vertical"
	android:background="?android:attr/activatedBackgroundIndicator"
	android:clickable="true"
	android:longClickable="true">
    <ImageView
        android:id="@+id/feeds_grid_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/feeds_grid_image"
        android:scaleType="fitXY">
    </ImageView>
 
    <TextView
        android:id="@+id/feeds_grid_item_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text_inverse"
		android:background="#80000000"/>
    
    <TextView android:id="@+id/feeds_grid_item_notification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:maxLines="1"
        style="@style/Podhoarder.Text.gridNotification"
        android:background="@drawable/feeds_grid_notification_shape"/>
</com.podhoarder.component.CheckableRelativeLayout>
