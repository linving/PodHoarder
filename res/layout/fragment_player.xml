<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/fragment_player_background"
    android:orientation="vertical" 
    android:id="@+id/playerFragment_container">

    <TextView
        android:id="@+id/playerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_title"
        android:textColor="@color/fragment_player_podcast_title"
        android:textSize="@dimen/fragment_player_podcast_title"/>

    <TextView
        android:id="@+id/playerEpisode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="@string/episode"
        android:textColor="@color/fragment_player_podcast_episode"
        android:textSize="@dimen/fragment_player_podcast_episode"/>

    <MediaController
        android:id="@+id/mediaController"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="4dp" />
        
    </MediaController>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
            
            <TextView
        		android:id="@+id/playerElapsedTime"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_alignParentLeft="true"
        		android:paddingLeft="5dp"
        		android:text="@string/elapsed_time"
        		android:textColor="@color/fragment_player_elapsed_time"
        		android:textSize="@dimen/fragment_player_elapsed_time" />

            <TextView
                android:id="@+id/playerTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:text="@string/total_time"
                android:textColor="@color/fragment_player_total_time"
                android:textSize="@dimen/fragment_player_total_time" />
            
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/play" />

        <ImageButton
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/playButton"
            android:src="@drawable/previous" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/playButton"
            android:src="@drawable/next" />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.podhoarderproject.ericharlow.DragNDrop.DragNDropListView
            android:id="@+id/playerList"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
			android:background="@color/fragment_player_playerlist_background">
        </com.podhoarderproject.ericharlow.DragNDrop.DragNDropListView>
        
    </LinearLayout>

</LinearLayout>