<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout android:id="@+id/player_controls_text_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">
        <TextView android:id="@+id/player_controls_episode_title"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content" 
    		android:focusable="true" 
	        android:gravity="center_horizontal"
	        android:textSize="@dimen/fragment_player_podcast_episode"
	        android:textColor="@color/fragment_player_podcast_episode"
	        android:fontFamily="sans-serif-light"
	        android:singleLine="true" 
        	android:ellipsize="marquee"
        	android:marqueeRepeatLimit="marquee_forever"
        	android:scrollHorizontally="true"/>
    </LinearLayout>
	<LinearLayout android:id="@+id/player_controls_button_container"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
	    android:layout_below="@id/player_controls_text_container"
	    android:orientation="horizontal"
	    android:layout_centerHorizontal="true">
	    <ImageButton android:id="@+id/player_controls_button_skip_backwards"
	        android:layout_width="50dp"
	        android:layout_height="35dp"
	        android:layout_marginTop="15dp"
	        android:layout_marginRight="50dp"
	        android:scaleType="fitXY"
	        android:src="@drawable/dark_player_backward"
	        android:background="?android:attr/selectableItemBackground"
	        android:alpha=".9"/>
	    <ToggleButton android:id="@+id/player_controls_button_playpause"
	        android:layout_width="65dp"
	        android:layout_height="65dp"
	        android:scaleType="fitXY"
	        android:background="@drawable/player_button_playpause"
	        android:textOff=""
			android:textOn="" 
	        android:alpha=".9"/>
	    <ImageButton android:id="@+id/player_controls_button_skip_forward"
	        android:layout_width="50dp"
	        android:layout_height="40dp"
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="50dp"
	        android:scaleType="fitXY"
	        android:src="@drawable/dark_player_forward"
	        android:background="?android:attr/selectableItemBackground"
	        android:alpha=".9"/>
	</LinearLayout>
	
	<RelativeLayout android:id="@+id/player_controls_seekbar_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/player_controls_button_container">
	    <RelativeLayout android:id="@+id/player_controls_seekbar_text_container"
	        android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp">
	        <TextView android:id="@+id/player_controls_elapsed_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
	        android:fontFamily="sans-serif-light"
		        android:textSize="@dimen/fragment_player_elapsed_time"/>
		    <TextView android:id="@+id/player_controls_total_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
	        android:fontFamily="sans-serif-light"
		        android:textSize="@dimen/fragment_player_total_time"/>
	    </RelativeLayout>
	    <SeekBar android:id="@+id/player_controls_seekbar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/player_controls_seekbar_text_container"
	        android:visibility="invisible"/>
    </RelativeLayout>
</RelativeLayout>
