<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:podhoarder="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/player_controls_seekbar_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        
        <com.podhoarder.view.CircularSeekBar
            android:id="@+id/player_controls_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_centerInParent="true" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/player_controls_button_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:divider="?android:listDivider"
        android:dividerPadding="12dip"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <ImageButton
            android:id="@+id/player_controls_button_skip_backwards"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha=".9"
            android:background="?android:attr/selectableItemBackground"
            android:padding="35dp"
            android:scaleType="centerInside"
            android:src="@drawable/dark_player_backward" />

        <com.podhoarder.view.ToggleImageButton
            android:id="@+id/player_controls_button_playpause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha=".9"
            android:background="?android:attr/selectableItemBackground"
            android:padding="25dp"
            android:scaleType="centerInside"
            podhoarder:checkedDrawable="@drawable/dark_player_pause"
            podhoarder:unCheckedDrawable="@drawable/dark_player_play"/>

        <ProgressBar
            android:id="@+id/player_controls_loading_circle"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:indeterminate="true"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/player_controls_button_skip_forward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha=".9"
            android:background="?android:attr/selectableItemBackground"
            android:padding="35dp"
            android:scaleType="centerInside"
            android:src="@drawable/dark_player_forward" />
    </LinearLayout>

</LinearLayout>