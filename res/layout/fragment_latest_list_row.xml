<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp" 
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
	android:background="?android:attr/activatedBackgroundIndicator">
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:orientation="horizontal">
	    <ImageView android:id="@+id/list_episode_row_feed_image"
	        android:layout_width="75dp"
	        android:layout_height="75dp"
	        android:layout_centerVertical="true"
			android:background="@drawable/list_image"
	        android:alpha=".85"/>
	    <LinearLayout 
	        android:id="@+id/list_episode_row_text_container"
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/list_episode_row_feed_image"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="25dp"
	        android:layout_centerVertical="true">
		    <TextView
		        android:id="@+id/list_episode_row_episodeName"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:textColor="@color/episode_list_row_title"
		        android:textSize="@dimen/fragment_latest_list_episode_row"
		        android:textStyle="bold"
	        android:fontFamily="sans-serif-light"
		        android:maxLines="1"
    			android:ellipsize="end"
    			android:maxWidth="320dp"/>
		    <TextView
		        android:id="@+id/list_episode_row_feedName"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:textColor="@color/episode_list_row_title"
		        android:textSize="@dimen/fragment_latest_list_episode_row"
		        android:textStyle="bold"
	        android:fontFamily="sans-serif-light"
		        android:maxLines="1"
    			android:ellipsize="end"
    			android:maxWidth="320dp"/>
		    <LinearLayout android:id="@+id/list_episode_row_age_container"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:orientation="horizontal">
			    <TextView
			        android:id="@+id/list_episode_row_episodeAge"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
		        android:fontFamily="sans-serif-light"
			        android:textColor="@color/episode_list_row_subtitle"
			        android:textSize="@dimen/fragment_latest_list_episode_row"/>
			    <TextView
			        android:id="@+id/list_episode_row_new"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="5dp"
			        android:textColor="@color/episode_list_row_notification"
			        android:textSize="@dimen/fragment_latest_list_episode_row"
			        android:textStyle="bold"
		        android:fontFamily="sans-serif-light"
			        android:maxLines="1"
	    			android:text="@string/fragment_latest_list_row_new"
	    			android:visibility="gone"/>
		    </LinearLayout>
	    </LinearLayout>
	</RelativeLayout>
	<LinearLayout android:id="@+id/list_episode_row_expandable_container"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="-50dip"
	    android:orientation="horizontal"
	    android:visibility="gone">
        <View android:layout_width="2dip"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:background="@color/app_accent"/>
		<TextView 	
		    android:id="@+id/list_episode_row_expandableTextView"
		    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_marginRight="20dip"
            android:paddingLeft="5dip"
	    	android:fontFamily="sans-serif-light"
	        android:textColor="@color/episode_list_row_subtitle"
	        android:textSize="@dimen/fragment_latest_list_episode_row"/>
	</LinearLayout>
</LinearLayout>