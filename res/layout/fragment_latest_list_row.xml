<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp" 
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
	android:background="?android:attr/activatedBackgroundIndicator">
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:orientation="horizontal">
	    <ImageView android:id="@+id/list_episode_row_feed_image"
	        android:layout_width="75dp"
	        android:layout_height="75dp"
	        android:layout_centerVertical="true"
			android:background="@drawable/list_image"
	        android:alpha=".85"/>
	    <LinearLayout 
	        android:id="@+id/list_episode_row_text_container"
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/list_episode_row_feed_image"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="25dp"
	        android:layout_centerVertical="true">
		    <TextView
		        android:id="@+id/list_episode_row_episodeName"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:textColor="@color/fragment_latest_list_episode_title"
		        android:textSize="@dimen/fragment_latest_list_episode_title"
		        android:textStyle="bold"
	        android:fontFamily="sans-serif-light"
		        android:maxLines="1"
    			android:ellipsize="end"
    			android:maxWidth="320dp"/>
		    <TextView
		        android:id="@+id/list_episode_row_feedName"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:textColor="@color/fragment_latest_list_feed_title"
		        android:textSize="@dimen/fragment_latest_list_feed_title"
		        android:textStyle="bold"
	        android:fontFamily="sans-serif-light"
		        android:maxLines="1"
    			android:ellipsize="end"
    			android:maxWidth="320dp"/>
		    <LinearLayout android:id="@+id/list_episode_row_age_container"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:orientation="horizontal">
			    <TextView
			        android:id="@+id/list_episode_row_episodeAge"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
		        android:fontFamily="sans-serif-light"
			        android:textColor="@color/fragment_latest_list_episode_age"
			        android:textSize="@dimen/fragment_latest_list_episode_age"/>
			    <TextView
			        android:id="@+id/list_episode_row_new"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="5dp"
			        android:textColor="@color/fragment_latest_list_row_new"
			        android:textSize="@dimen/fragment_latest_list_row_new"
			        android:textStyle="bold"
		        android:fontFamily="sans-serif-light"
			        android:maxLines="1"
	    			android:text="@string/fragment_latest_list_row_new"
	    			android:visibility="gone"/>
		    </LinearLayout>
	    </LinearLayout>
	</RelativeLayout>
	<LinearLayout android:id="@+id/list_episode_row_expandable_container"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="-50dip"
	    android:visibility="gone">
		<TextView 	
		    android:id="@+id/list_episode_row_expandableTextView"
		    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_marginRight="20dip"
	    android:fontFamily="sans-serif-light"
	        android:textColor="@color/fragment_latest_list_episode_description"
	        android:textSize="@dimen/fragment_latest_list_episode_description"/>
		<!-- <ProgressBar
	        android:id="@+id/list_episode_row_elapsed_progressBar"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_alignParentRight="true"
	        android:rotation="-90.0"
	        android:indeterminate="false"
	        android:progressDrawable="@drawable/circular_progress_bar"/> -->
	</LinearLayout>
</LinearLayout>