<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_feeds_list_add_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical">
    <ImageView android:id="@+id/list_add_feed_row_image"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_margin="10dip"
        android:background="@drawable/dark_add_feed"/>
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:layout_marginLeft="5dp"
    	android:orientation="vertical">
        <TextView
	        android:id="@+id/list_add_feed_row_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/fragment_feeds_list_podcast_title"
	        android:textSize="@dimen/fragment_feeds_list_podcast_title"
	        android:text="@string/fragment_feed_list_add_row"/>
    </RelativeLayout>
</LinearLayout>